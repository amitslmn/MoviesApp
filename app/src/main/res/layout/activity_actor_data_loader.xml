<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    app:cardBackgroundColor="#65D3C6"
    app:cardCornerRadius="8dp"
    app:cardElevation="7dp"
    tools:context="com.amit.moviesapp.activities.ActorDataLoader">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/actorImage"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/gb_image"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/actorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#51CCBD"
            android:gravity="center"
            android:padding="10dp"
            android:text="Name"
            android:textColor="#000"
            android:textSize="20sp"
            app:fontFamily="@font/bigshot_one" />

    </LinearLayout>

        <TextView
            android:id="@+id/actorId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="#51CCBD"
            android:text="Id : "
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/petrona" />

        <TextView
            android:id="@+id/actorOrgionalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="#51CCBD"
            android:text="Original Name : "
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/petrona" />

        <TextView
            android:id="@+id/actorGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="#51CCBD"
            android:text="Gender : "
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/petrona" />

        <TextView
            android:id="@+id/actorAdult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="#51CCBD"
            android:text="Adult : "
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/petrona" />

        <TextView
            android:id="@+id/actorPopularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="#51CCBD"
            android:text="Popularity :"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/petrona" />

        <TextView
            android:id="@+id/actorKnownForDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="#51CCBD"
            android:text="Known For Department : "
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:fontFamily="@font/petrona" />

    </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>